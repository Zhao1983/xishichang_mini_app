/* pages/mypage/mypage.wxss */

.container {
    max-width: 100%;
    position: relative;
}

.background-image {
    width: 100%;
    height: 150px;
}

.mypage-content {
    position: absolute;
    top: 10px;
    left: 0;
    right: 0;
    padding: 15px;
}

.avatar {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
}

.avatar .image-avatar {
    width: 58px;
    height: 58px;
    border-radius: 50px;
}

.avatar .nickname {
    font-size: 18px;
    color: #fff;
    font-weight: bold;
    margin-left: 10px;
}

.info-content {
    padding: 15px;
    border-radius: 8px;
    background-color: #fff;
    margin-bottom: 15px;
}

.info-content:last-child {
    margin-bottom: 0;
}

.info-title {
    font-size: 15px;
    font-weight: bold;
    margin-bottom: 25px;
}

.info-row {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 55px;
    margin-bottom: 25px;
}

.info-row:last-child {
    margin-bottom: 0;
}

.info-row .item {
    width: 25%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    font-size: 14px;
    color: #222222;
    flex-direction: column;
}

.icon-count {
    position: absolute;
    background-color: #fff;
    color: #cf000e;
    border: 1px solid #cf000e;
    border-radius: 50px;
    width: 16px;
    height: 16px;
    font-size: 11px;
    right: 14px;
    top: -7px;
    display: flex;
    align-items: center;
    justify-content: center;
}
