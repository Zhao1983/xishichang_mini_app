/* pages/mypage/order/order_info.wxss */

.container {
    max-width: 100%;
}

.top-content {
    position: fixed;
    left: 0;
    right: 0;
    z-index: 100;
}

.top-content .warning {
    padding: 7px 10px;
    background-color: #ffd87a;
    display: flex;
    align-items: center;
}

.top-content .icon {
    width: 15px;
    height: 15px;
}

.top-content .text {
    font-size: 13px;
    color: #222222;
    line-height: 1.5;
}

.top-content .menu {
    display: flex;
    align-items: center;
    background-color: #fff;
}

.top-content .menu .menu-item {
    width: 25%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.top-content .menu .menu-item .menu-txt {
    position: relative;
    padding: 13px 0px;
    color: #414141;
    font-size: 15px;
    display: inline-block;
}

.top-content .menu .menu-item .menu-txt.active {
    color: #cf000e;
    border-bottom: 2px solid #cf000e;
    font-weight: bold;
}

.top-content .menu .menu-item .icon-cnt {
    position: absolute;
    background-color: #cf000e;
    color: #fff;
    border-radius: 50%;
    width: 16px;
    height: 16px;
    top: 5px;
    right: -10px;
    font-size: 11px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.orders {
    position: relative;
    padding: 15px;
}

.empty-txt {
    margin-top: 50%;
    font-size: 17px;
    color: #878787;
    font-weight: bold;
    text-align: center;
}
