/* pages/mypage/favority/favority.wxss */

.container {
    max-width: 100%;
}

.empty-favority {
    padding-top: 100px;
    text-align: center;
}

.empty-favority .image-empty {
    width: 81px;
    height: 81px;
}

.empty-favority .text-1 {
    font-size: 15px;
    color: #b3b3b3;
    padding-top: 23px;
    margin-bottom: 60px;
}

.empty-favority .btn-redirect {
    background-color: #ffcc33;
    width: 108px;
    height: 38px;
    border-radius: 20px;
    color: #222222;
    font-size: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
}

.favority-content {
    padding: 15px;
}

.btn-delete {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 15px;
    font-weight: bold;
    color: #fff;
    background-color: #c4c4c4;
}

.btn-delete.active {
    color: #222222;
    background-color: #ffcc33;
}
