/* pages/goods/order_complete/order_complete.wxss */

page {
    background-color: #fff !important;
}

.container {
    max-width: 100%;
    padding-top: 30%;
    text-align: center;
    display: block;
}

.icon-success {
    width: 63px;
    height: 63px;
    margin-bottom: 30px;
}

.icon-info {
    width: 73px;
    height: 63px;
    margin-bottom: 30px;
}

.success-txt {
    font-size: 25px;
    color: #cf000e;
    font-weight: bold;
    margin-bottom: 15px;
}

.info-txt {
    font-size: 25px;
    color: #50b674;
    font-weight: bold;
    margin-bottom: 15px;
}

.detail-txt {
    font-size: 13px;
    color: #535353;
    margin-bottom: 24px;
}

.btn-main {
    padding: 15px 40px;
    border-radius: 30px;
    background-color: #ffca2f;
    color: #222222;
    font-size: 15px;
    text-align: center;
    width: 30%;
    margin: 0 auto;
    margin-bottom: 15px;
}

.btn-order {
    padding: 15px 40px;
    border-radius: 30px;
    border: 1px solid #e3e3e3;
    color: #222222;
    font-size: 15px;
    text-align: center;
    width: 30%;
    margin: 0 auto;
}
