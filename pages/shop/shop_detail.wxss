/* pages/shop/shop_detail.wxss */
.shop-container {
    max-width: 100%;
    background-color: transparent;
}

.container-backgroud {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 64px;
    overflow: hidden;
    z-index: -1;
}

.shop-header {
    width: 100%;
    position: relative;
    height: auto;
}

.top-line {
    position: absolute;
    width: 100%;
    height: 4px;
    top: 0;
}

.shop-header-bg {
    width: 100%;
    object-fit: fill;
    height: 80vw;
}

.shop-info {
    padding: 13px 15px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
}

.shop-info .info {
    padding: 3px 7px;
    background-color: rgba(0, 0, 0, 0.4);
    display: flex;
    border-radius: 3px;
    align-items: center;
}

.shop-info .info .year-icon {
    width: 20px;
    height: 20px;
}

.shop-info .info .info-text {
    font-size: 13px;
    color: #fff;
    font-weight: bold;
}

.shop-info .info .icon-diamond {
    width: 12px;
    height: 12px;
    margin-left: 2px;
}

.shop-info .info .icon {
    width: 45px;
    height: 13px;
    margin-left: 5px;
}

.shop-like {
    display: flex;
    flex-direction: column;
    width: 39px;
    justify-content: center;
}

.shop-like .heart {
    width: 27px;
    height: 25px;
}

.shop-like .text {
    font-size: 13px;
    color: #d00a17;
    font-weight: bold;
}

.shop-content {
    width: 100%;
    height: 100%;
    margin-top: -65px;
    position: relative;
}

.shop-content .info {
    padding: 0px 15px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.shop-content .info .box {
    background-color: rgba(0, 0, 0, 0.4);
    padding: 5px;
    border-radius: 3px;
    display: flex;
}

.shop-content .info .box .text {
    font-size: 16px;
    color: #fff;
    font-weight: bold;
}

.shop-content .info .box .icon {
    width: 19px;
    height: 19px;
}

.shop-content .content {
    padding: 15px 15px 0px 15px;
    height: 100%;
    display: flex;
}

.shop-content .content .goods-item {
    width: calc(50% - 8px);
    margin-right: 16px;
    flex-direction: column;
    position: relative;
}

.shop-content .content .goods-item:last-child {
    margin-right: 0;
}
