/* pages/category/category_detail.wxss */

.container {
    max-width: 100%;
    position: relative;
}

.top-content {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
}
.category-search-tool {
    padding: 10px 15px;
    position: relative;
    height: 40px;
}

.category-search-tool .image {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.category-search-tool .search-content {
    height: 100%;
    border-radius: 50px;
    background-color: #fff;
    position: relative;
    display: flex;
    align-items: center;
    padding-left: 10px;
}

.category-search-tool .search-content .icon-search {
    width: 17px;
    height: 17px;
}

.category-search-tool .search-content .txt-placeholder {
    font-size: 15px;
    color: #b1b1b1;
    padding-left: 5px;
}

.category-menu {
    height: 95px;
    position: relative;
}

.category-menu .type-item {
    width: 100%;
    text-align: center;
    padding: 7px 0;
    background-color: #f5f6fd;
    border-bottom: 5px solid #f5f6fd;
    position: relative;
}

.category-menu .type-item .image-item {
    width: 50px;
    height: 50px;
    border-radius: 12px;
    margin-bottom: 8px;
}

.category-menu .type-item .txt-item {
    text-align: center;
    font-size: 12px;
    color: #525252;
}

.category-menu .type-item .txt-item.active {
    background-color: #cf000e;
    padding: 3px;
    color: #fff;
    border-radius: 15px;
}

.swiper-category {
    height: 100%;
    position: relative;
}

swiper-item {
    width: 70px !important;
}

.type-line-active {
    width: 55px;
    height: 55px;
    border-radius: 12px;
    border: 2px solid #cf000e;
    position: absolute;
    top: 5px;
    left: 5px;
    z-index: 10;
}

.category-content {
    position: fixed;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
}

.category-content .sub-menu {
    width: 21%;
    overflow-y: auto;
    z-index: 50;
    height: 100%;
    padding-top: 10px;
    margin-bottom: 10px;
}

.category-content .sub-menu .menu-item {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 65px;
    font-size: 14px;
    columns: #565555;
}

.category-content .sub-menu .menu-item .image-active {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
}

.category-content .sub-menu .menu-item.active {
    color: #222222;
    font-weight: bold;
}

.category-content .content {
    width: 79%;
    z-index: 50;
    background-color: #fff;
    height: 100%;
    padding: 0px 9px;
}
