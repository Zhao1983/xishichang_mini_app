/* pages/search/search.wxss */

page {
    background-color: #fff !important;
}

.container {
    max-width: 100%;
    position: relative;
}

.search-content {
    padding-top: 60px;
}

.search-history {
    padding: 15px 15px 0px 15px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.search-history .title-content {
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.search-history .icon-history {
    width: 17px;
    height: 17px;
}

.search-history .title-content .title {
    font-size: 15px;
    color: #222222;
    margin-left: 13px;
}

.search-history .recycle-bin {
    width: 17px;
    height: 19px;
}

.search-history-content {
    padding: 0px 15px 15px 15px;
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
}

.history-content {
    width: 85%;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex-wrap: wrap;
    overflow-y: hidden;
}

.right-content {
    width: 15%;
    display: flex;
    align-items: flex-end;
    justify-content: flex-end;
}

.right-content .icon-arrow {
    width: 10px;
    height: 6px;
    transition-duration: 0.45s;
    transition-timing-function: ease;
    transition-delay: 0s;
    transform: rotate(0deg);
}

.right-content .icon-arrow.active {
    transform: rotate(-180deg);
}

.search-item {
    border-radius: 15px;
    padding: 0px 12px;
    font-size: 15px;
    color: #222;
    background-color: #f5f5f6;
    margin-top: 15px;
    margin-right: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 24px;
}

.search-item:last-child {
    margin-right: 0;
}
