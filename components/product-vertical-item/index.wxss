/* components/product-vertical-item/index.wxss */
.product-content {
    width: 100%;
    background-color: #fff;
    border-radius: 7px;
    margin-bottom: 15px;
}

.thumbnail {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 41vw;
}
.thumbnail .image {
    width: 100%;
    height: 100%;
    border-top-right-radius: 7px;
    border-top-left-radius: 7px;
}

.thumbnail .icon {
    position: absolute;
    border-top-right-radius: 7px;
    width: 40px;
    height: 40px;
    top: 0;
    right: 0;
}

.thumbnail .icon-play {
    width: 40px;
    height: 40px;
    position: absolute;
}

.thumbnail .goods-outside {
    position: absolute;
    width: 100%;
    top: 0;
    left: 0;
    height: 100%;
    opacity: 0.7;
}

.product-info {
    position: relative;
    padding: 10px 7px 13px 7px;
}

.product-info .title {
    width: 100%;
    font-size: 15px;
    color: #222222;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    line-height: 1.5;
}

.product-info .desc {
    width: 100%;
    font-size: 15px;
    color: #b8b8b8;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    margin-top: 3px;
    line-height: 1.5;
}

.product-info .shop-info {
    display: flex;
    margin-top: 3px;
    align-items: center;
}

.product-info .shop-info .image {
    width: 12px;
    height: 12px;
}

.product-info .shop-info .name {
    width: calc(100% - 12px);
    padding-left: 4px;
    font-size: 12px;
    color: #222222;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.product-info .original-price {
    font-size: 13px;
    color: #b8b8b8;
    text-decoration: line-through;
}

.product-info .price-group {
    display: flex;
    align-items: flex-end;
}

.product-info .price-group .symbol {
    font-size: 12px;
    color: #cf000e;
    font-weight: bold;
}

.product-info .price-group .price {
    font-size: 16px;
    color: #cf000e;
    font-weight: bold;
    margin-left: 2px;
}

.product-info .price-group .unit {
    font-size: 14px;
    color: #b8b8b8;
}

.product-info .icon-cart {
    position: absolute;
    width: 27px;
    height: 27px;
    bottom: 13px;
    right: 7px;
}

.free-price-item {
    font-size: 11px;
    color: #fff;
    padding: 3px;
    border-radius: 3px;
    display: table;
}

.free-price-item.red {
    background-color: #ff7e4c;
}

.free-price-item.green {
    background-color: #37c2a8;
}

