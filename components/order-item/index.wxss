/* components/order-item/index.wxss */

.order-content {
    background-color: #fff;
    border-radius: 7px;
    padding: 15px;
    margin-bottom: 15px;
}

.order-content .txt-status {
    font-size: 14px;
    color: #cf000e;
    text-align: right;
    margin-bottom: 5px;
}

.order-content .order-row {
    height: auto;
    margin-bottom: 15px;
}

.order-content .order-row:last-child {
    margin-bottom: 0;
}

.order-content .order-row .shop-info {
    padding-bottom: 10px;
    border-bottom: 1px solid #eeeeee;
    display: flex;
    align-items: center;
}

.order-content .order-row .shop-info .icon-shop {
    width: 17px;
    height: 15px;
}

.order-content .order-row .shop-info .shop-title {
    font-size: 16px;
    color: #222222;
    margin-left: 3px;
}

.order-content .order-row .goods-info {
    display: flex;
    padding: 15px 0px;
    border-bottom: 1px solid #eeeeee;
}

.order-content .order-row .goods-info .image-content {
    position: relative;
    width: 33.33%;
    height: auto;
    display: flex;
    align-items: center;
}

.order-content .order-row .goods-info .image-content .goods-image {
    width: 90%;
    height: 19.4vw;
    border-radius: 7px;
    border: 1px solid #e5e5e5;
}

.order-content .order-row .goods-info .image-content .goods-icon {
    position: absolute;
    border-top-right-radius: 7px;
    width: 40px;
    height: 40px;
    top: 0;
    right: 10%;
}

.order-content .order-row .goods-info .image-content .outside-image {
    position: absolute;
    width: 92%;
    height: 19.4vw;
    left: 0;
    opacity: 0.7;
}

.order-content .order-row .goods-info .goods-content {
    position: relative;
    width: 66.66%;
    height: auto;
}

.order-content .order-row .goods-info .goods-content .goods-title {
    font-size: 14px;
    color: #222222;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    line-height: 1.5;
}

.order-content .order-row .goods-info .goods-content .size-title {
    font-size: 12px;
    color: #b8b8b8;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    line-height: 1.5;
    margin-top: 3px;
}

.order-content .order-row .goods-info .goods-content .price-content {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 3px;
}

.order-content .order-row .goods-info .goods-content .price-content .symbol {
    font-size: 14px;
    color: #cf000e;
    font-weight: bold;
}

.order-content .order-row .goods-info .goods-content .price-content .price {
    font-size: 16px;
    color: #cf000e;
    font-weight: bold;
}

.order-content .order-row .goods-info .goods-content .price-content .unit {
    font-size: 14px;
    color: #b8b8b8;
}

.order-content .order-row .goods-info .goods-content .price-content .original-price {
    font-size: 13px;
    color: #b8b8b8;
    text-decoration: line-through;
}

.order-content .order-row .goods-info .goods-content .price-content .goods-quantity {
    font-size: 15px;
    color: #222222;
    font-weight: bold;
}

.delivery-info {
    margin-top: 15px;
}

.delivery-info .info-row {
    display: flex;
    align-items: center;
    margin-bottom: 15px;
    justify-content: space-between;
}

.delivery-info .info-row:last-child {
    margin-bottom: 0;
}

.delivery-info .info-row .left-info {
    width: 50%;
    position: relative;
    display: flex;
    align-items: center;
}

.delivery-info .info-row .right-info {
    width: 50%;
    position: relative;
    height: auto;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    flex-direction: column;
}

.delivery-info .info-row .txt-1 {
    font-size: 15px;
    color: #222222;
}

.delivery-info .info-row .txt-1.bold {
    font-weight: bold;
}

.delivery-info .info-row .txt-2 {
    font-size: 14px;
    color: #b3b3b3;
}

.delivery-info .info-row .text {
    font-size: 15px;
    color: #222222;
}

.delivery-info .info-row .icon-help {
    width: 15px;
    height: 15px;
    margin-left: 4px;
}

.delivery-info .info-row .icon-arrow {
    width: 15px;
    height: 15px;
    margin-left: 4px;
    transition-duration: 0.45s;
    transition-timing-function: ease;
    transition-delay: 0s;
    transform: rotate(0deg);
}

.delivery-info .info-row .icon-arrow.active {
    transform: rotate(-180deg);
}

.btn-group {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 15px;
    border-top: 1px solid #eeeeee;
    margin-top: 15px;
}

.btn-group .btn {
    width: 76px;
    height: 28px;
    border-radius: 30px;
    font-size: 14px;
    color: #222222;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #bdbdbd;
    background-color: #fff;
}

.btn-group .btn.active {
    border: 1px solid #ffcc33;
    background-color: #ffcc33;
}
