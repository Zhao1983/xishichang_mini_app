.search-content {
    display: flex;
    align-items: flex-end;
    height: 28px;
    opacity: 0;
    margin-top: -3px;
}

.search-content .search-input {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    border-radius: 50px;
    padding-left: 12px;
    border: 1px solid #ffca2f;
    background-color: #fff;
    justify-content: flex-start;
}

.search-content .search-input .icon {
    width: 13px;
    height: 13px;
}

.search-content .search-input .text {
    font-size: 12px;
    color: #b1b1b1;
    padding-left: 7px;
}

.right-btn {
    width: 50px;
    height: 25px;
    margin-top: -2px;
    border-radius: 20px;
    background-color: #fff;
    font-size: 13px;
    color: #222222;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #dedede;
}
