/* components/custom-toast/index.wxss */
.custom-toast {
    position: fixed;
    width: 100%;
    height: 55px;
    display: flex;
    align-items: center;
    justify-content: center;
    left: 0;
    right: 0;
    z-index: 9999;
    bottom: -55px;
    opacity: 0;
}

.custom-toast-content {
    font-size: 13px;
    color: #fff;
    padding: 7px 17px;
    border-radius: 50px;
    background-color: #000;
}
