/* components/notice-dialog/index.wxss */
.notice-overlay {
    position: fixed;
    top: 88px;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);
    z-index: 700;
    transition: all 260ms ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.notice-dialog {
    z-index: 1000;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: -50px;
}

.notice-dialog-content {
    width: 90%;
    text-align: center;
}

.notice-image {
    width: 100%;
    height: 110vw;
    margin-bottom: 10px;
}

.notice-option {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.notice-option .left-item {
    font-size: 15px;
    color: #fff;
}

.notice-option .right-item {
    width: 17px;
    height: 17px;
}
